@model IEnumerable<ArticleIndexModel>
 <div class="row">
                            <div class="center-slider mask">
                                @foreach (ArticleIndexModel article in Model)
                                {
                                <!-- slide of the page -->
                                <article class="slide">
                                    <div class="slide-holder">
                                        <div class="img-holder">
                                            <img src="@System.IO.Path.Combine("/Uploads",article.PhotoPath)" alt="image description">
                                        </div>
                                        <h2><a href="single-post.html">@article</a></h2>
                                        <time datetime="2011-01-12"><a href="#">@article.CreateDate</a></time>
                                        <a href="single-post.html" class="read-more">Continue Reading</a>
                                    </div>
                                </article>
                                <!-- slide of the page end -->
                                }
                            </div>
                        </div>